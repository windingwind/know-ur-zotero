{
  "name": "know-ur-zotero",
  "type": "module",
  "version": "0.0.2",
  "description": "Status monitoring and analysis tool for Zotero.",
  "config": {
    "addonName": "Know Ur Zotero",
    "addonID": "know-ur-zotero@euclpts.com",
    "addonRef": "kuZ",
    "addonInstance": "kuZ",
    "prefsPrefix": "extensions.kuZ"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/windingwind/know-ur-zotero.git"
  },
  "author": "windingwind",
  "bugs": {
    "url": "https://github.com/windingwind/know-ur-zotero/issues"
  },
  "homepage": "https://github.com/windingwind/know-ur-zotero#readme",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "start": "zotero-plugin serve",
    "build": "zotero-plugin build && tsc --noEmit",
    "lint:check": "prettier --check . && eslint .",
    "lint:fix": "prettier --write . && eslint . --fix",
    "release": "zotero-plugin release",
    "test": "echo \"Error: no test specified\" && exit 1",
    "update-deps": "npm update --save"
  },
  "dependencies": {
    "chart.js": "^4.4.8",
    "zotero-plugin-toolkit": "^5.0.0-0"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/node": "^22.13.14",
    "eslint": "^9.23.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0",
    "zotero-plugin-scaffold": "^0.4.1",
    "zotero-types": "^4.0.0-beta.2"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "endOfLine": "lf",
    "overrides": [
      {
        "files": [
          "*.xhtml"
        ],
        "options": {
          "htmlWhitespaceSensitivity": "css"
        }
      }
    ]
  }
}
